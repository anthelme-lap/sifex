{% extends 'adminBase.html.twig' %}

{% block title %}Demande index{% endblock %}

{% block body %}


<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
        For more information about DataTables, please visit the <a target="_blank"
            href="https://datatables.net">official DataTables documentation</a>.</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary"><a href="{{path('app_demande_new')}} ">Créer</a> </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        
                        <tr>
                            <th>Id</th>
                            <th>Client</th>
                            <th>Valeur du colis</th>
                            <th>Numéro du receveur</th>
                            <th>Nom du receveur</th>
                            <th>Description du colis</th>
                            
                            <th>actions</th>
                        </tr>
                        
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Client</th>
                            <th>Valeur du colis</th>
                            <th>Numéro du receveur</th>
                            <th>Nom du receveur</th>
                            <th>Description du colis</th>
                            
                            {# <th>Description du colis</th> #}
                            <th>actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        {% for demande in demandes %}
                            <tr>
                                <td>{{ demande.id }}</td>
                                <td>{{ demande.fkuser }}</td>
                                <td>{{ demande.value }} FR</td>
                                <td>{{ demande.phone }}</td>
                                <td>{{ demande.fullname }}</td>
                                <td>{{ demande.description }}</td>
                                
                                
                                <td>
                                    <a href="{{ path('app_demande_show', {'id': demande.id}) }}">show</a>
                                    <a href="{{ path('app_demande_edit', {'id': demande.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">no records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
{% endblock %}
